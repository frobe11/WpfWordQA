<Window x:Class="WpfWordQA.RequestAnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfWordQA"
        mc:Ignorable="d"
        Title="RequestAnswerWindow" Height="400.6" Width="600">
    <Grid Width="600" Height="400" Background="Beige">
        <TextBox x:Name="RequestTb" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="336" Height="50" FontSize="20" AcceptsReturn="True"/>
        <TextBlock x:Name="answerTbl" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Height="78" Width="336" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button x:Name="ChangeWindow" Content="окно ввода" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="96" Margin="0,300,0,0" Click="ChangeWindow_OnClick" />
        <Button x:Name="FindButton" Content="искать" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="96" Margin="0,200,0,0" FontSize="23" Click="FindButton_OnClick"/>
        <Label x:Name="RequestLabel" Content="Запрос" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Height="55" Width="120" FontSize="30" FontWeight="Bold" AutomationProperties.Name="\"/>

    </Grid>
</Window>
